<%- include('../partials/header'); %>

<%- include('../partials/nav'); %>

<!-- Edit Section -->
<div class="container">
    <div class="row">
        <div>
        <form class="edit-form" method="post">
            <h1 class="edit">Update Contact</h1><br>
            <div class="form-group">
                <label class="required-field" for="nameTextField" style="text-align: center">Contact Name:</label>
                <input type="text"
                id="nameTextField"
                name="name" 
                value="<%= contact.name %>"
                required>
            </div>

            <div class="form-group">
                <label class="required-field" for="numberTextField" style="text-align: center">Contact Number:</label>
                <input type="text"
                id="numberTextField"
                name="number"
                value="<%= contact.number %>"
                required>
            </div>

            <div class="form-group">
                <label class="required-field" for="emailTextField" style="text-align: center">Email Address:</label>
                <input type="text"
                id="emailTextField"
                name="email"
                value="<%= contact.email %>" 
                required>
            </div><br><br>

            <input class="button" type="submit" style="margin-left: 140px" value="Update">     
            <a href="/contact-list"><input class="button" type="button" style="margin-left: 5px" value="Cancel"></a>

        </form>
        </div>
    </div>
</div>


<%- include('../partials/footer'); %>

<%- include('../partials/bottom'); %>