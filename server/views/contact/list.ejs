<%- include('../partials/header'); %>

<%- include('../partials/nav'); %>

<div class="center">
    <div class="row">
        <div class="offset-md-1 col-md-11">

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/contact-list/add" class="btn btn-primary" role="button">
                    <i class="fas fa-plus-circle"></i> Add a New Contact</a>
                <% } %>

            <table class="table align-middle table-bordered table-striped table-hover">
                <!-- Header Row -->
                <tr>
                    <th class="text-center">Contact Name:</th>
                    <th class="text-center">Contact Number:</th>
                    <th class="text-center">Email Address:</th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                </tr>

                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= ContactList[count].name %></td>
                        <td class="text-center"><%= ContactList[count].number %></td>
                        <td class="text-center"><%= ContactList[count].email %></td>

                        <td class="text-center">
                            <a href="/contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary">
                            <i class="fas fa-pencil alt"></i>Update</a>
                        </td>
                        <td class="text-center">
                            <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>Delete</a>
                        </td>

                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>

<%- include('../partials/bottom'); %>

